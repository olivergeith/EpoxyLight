// This is a demonstration on how to use an input device to trigger changes on your neo pixels.
// You should wire a momentary push button to connect from ground to a digital IO pin.  When you
// press the button it will change to a new pixel animation.  Note that you need to press the
// button once to start the first animation!

#include <Adafruit_NeoPixel.h>

#include "EpoxyLight.h"

#include <Bounce2.h>

#define BUTTON_PIN 4


// Parameter 1 = number of pixels in strip,  neopixel stick has 8
// Parameter 2 = pin number (most are valid)
// Parameter 3 = pixel type flags, add together as needed:
//   NEO_RGB     Pixels are wired for RGB bitstream
//   NEO_GRB     Pixels are wired for GRB bitstream, correct for neopixel stick
//   NEO_KHZ400  400 KHz bitstream (e.g. FLORA pixels)
//   NEO_KHZ800  800 KHz bitstream (e.g. High Density LED strip), correct for neopixel stick

// 18 LEDs bei 144 Streifen
//  8 LEDs bei 60 Steifen
//

Adafruit_NeoPixel stripD6 = Adafruit_NeoPixel(31, 6, NEO_GRB + NEO_KHZ800);
EpoxyLight ringGrossD6(stripD6);

Bounce button = Bounce();
int modus = 0;

int millies = 0;
int deltaMillies = 5;

void setup() {
	millies = 0;

	// Setup the first button with an internal pull-up :
	// Button schließt gegen Masse
	pinMode(BUTTON_PIN, INPUT_PULLUP);
	button.attach(BUTTON_PIN);
	button.interval(5); // interval in ms

	ringGrossD6.setup();
}

void loop() {

	button.update();
	if (button.fell() == true) {
		incrementMode();
	}

	millies = millies + deltaMillies;

	if (millies >= 5000)
		millies = 0;

	drawEpoxyLight();
	delay(deltaMillies);

}

void incrementMode() {
	modus++;
	ringGrossD6.init();
	if (modus > 4) {
		modus = 0;
	}
}


void drawEpoxyLight() {
	switch (modus) {
	default:
	case 0:
		ringGrossD6.drawPoliceLight(millies, 25);
//		ringGrossD6.drawTrippleLauflichtWheeled(millies, 60);
		break;
	case 1:
		ringGrossD6.drawWheelColorful(millies, 512, 16);
		break;
	case 2:
		ringGrossD6.drawWheelColorful(millies, 256, 16);
		break;
	case 3:
		ringGrossD6.drawTrippleLauflichtWheeled(millies, 50);
		break;
	case 4:
		ringGrossD6.drawLauflichtBuildingUp(millies, 25, 32);
		break;
	}
}

